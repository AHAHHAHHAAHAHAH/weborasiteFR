---
import type { SiteConfig } from "../../lib/siteConfig";
const { cfg, section } = Astro.props as { cfg: SiteConfig; section: any };
const enc = (s: string) => encodeURIComponent(s);
const mail = `mailto:${cfg.contacts.email}?subject=${enc(section.emailSubject || "Candidatura")}`;
---

<section id={section.id} class="section">
  <div class="wrap grid cols-2">
    <div>
      <div class="kicker">{section.kicker}</div>
      <h2>{section.title}</h2>
      <p>{section.body}</p>

      <div style="margin-top:14px;">
        <a class="btn primary" href={mail}>Invia candidatura via Email</a>
      </div>
    </div>

    <div class="card" style="padding:18px;">
      <div class="small" style="color:var(--muted);">Cosa inserire</div>
      <ul style="margin:10px 0 0; padding-left:18px; color:var(--muted); line-height:1.6;">
        <li>Nome + contatti</li>
        <li>Portfolio / link lavori</li>
        <li>Ruolo (design/dev/content)</li>
        <li>Disponibilit√†</li>
      </ul>
    </div>
  </div>
</section>