---
import type { SiteConfig } from "../../lib/siteConfig";
const { cfg } = Astro.props as { cfg: SiteConfig; section: any };
---

<footer id="footer" class="led-footer">
  <div class="wrap footer-wrap">
    
    <div class="signature-block">
      <div class="creator-line">
        Engineered & Designed by <span class="brand">Webora studio<sup class="blink-code">code</sup></span>
      </div>
      
      <div class="legal-line">
        © 2026 • Tutti i diritti riservati.
      </div>
    </div>

  </div>
</footer>

<style is:global>
  /* Base del footer: Piatto e in basso */
  .led-footer {
    padding: 0 0 30px 0 !important;
    background: transparent !important;
    border: none !important;
    width: 100% !important;
  }

  /* FORZATURA ASSOLUTA: SPINGE TUTTO IN BASSO A DESTRA */
  .footer-wrap {
    display: flex !important;
    justify-content: flex-end !important; /* Questo è il comando che lo inchioda a destra */
    width: 100% !important;
  }

  /* IL BLOCCO FIRMA */
  .signature-block {
    display: flex;
    flex-direction: column;
    align-items: flex-end; /* Allinea il testo internamente a destra */
    text-align: right;
    opacity: 0.4; /* Mezzo spento di base */
    transition: opacity 0.3s ease;
    cursor: default;
  }

  /* RIGA 1: Stile premium per il nome */
  .creator-line {
    font-size: 0.7rem;
    color: #9ca3af;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-bottom: 4px;
    transition: color 0.3s ease;
  }

  .brand {
    color: #ffffff;
    font-weight: 700;
    margin-left: 4px;
    transition: all 0.3s ease;
  }

  /* Il "code" in apice (ELEVATO) */
  .blink-code {
    font-family: ui-monospace, monospace;
    font-size: 0.6rem;
    color: #b35b5b; /* Rosso scuro/spento all'inizio */
    font-weight: 600;
    margin-left: 1px;
    text-transform: lowercase;
  }

  /* RIGA 2: Font classicissimo per le robe legali reali */
  .legal-line {
    font-family: Arial, Helvetica, sans-serif;
    font-size: 0.65rem;
    color: #6b7280;
    letter-spacing: 0.02em;
    text-transform: none;
  }

  /* =======================================================
     IL LED AL PASSAGGIO DEL MOUSE (Animazione)
     ======================================================= */
  
  /* 1. Il blocco torna completamente nitido */
  .signature-block:hover {
    opacity: 1; 
  }

  /* 2. "Webora studio" si accende di rosso leggero e luminoso */
  .signature-block:hover .brand {
    color: #ff4d4d; /* Rosso acceso tipo LED */
    text-shadow: 0 0 10px rgba(255, 77, 77, 0.6);
  }

  /* 3. "code" fa DUE FLASH e poi si stabilizza sul rosso fisso */
  .signature-block:hover .blink-code {
    animation: neonBlink 0.8s ease-in-out forwards;
  }

  /* La sequenza di intermittenza del LED */
  @keyframes neonBlink {
    0%   { opacity: 1;   color: #ff4d4d; text-shadow: 0 0 12px rgba(255, 77, 77, 0.8); }
    25%  { opacity: 0.3; color: #b35b5b; text-shadow: none; } /* Si spegne */
    50%  { opacity: 1;   color: #ff4d4d; text-shadow: 0 0 12px rgba(255, 77, 77, 0.8); } /* Si riaccende */
    75%  { opacity: 0.3; color: #b35b5b; text-shadow: none; } /* Si rispegne */
    100% { opacity: 1;   color: #ff4d4d; text-shadow: 0 0 12px rgba(255, 77, 77, 0.8); } /* RESTA FISSO */
  }

  /* Mantenimento rigoroso a destra anche su mobile (evitando che sbatta contro il margine) */
  @media (max-width: 768px) {
    .footer-wrap {
      padding-right: 24px !important;
    }
  }
</style>