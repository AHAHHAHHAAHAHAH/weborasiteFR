---
import type { SiteConfig } from "../../lib/siteConfig";
const { cfg, section } = Astro.props as { cfg: SiteConfig; section: any };
---

<section id={section.id} class="section hero-section">
  <div class="wrap reveal">

    <span class="kicker">{section.kicker}</span>

    <h1 class="headline">
      {section.headline}
    </h1>

    <p class="body-text">
      {section.body}
    </p>

    <div class="actions">
      {section.primaryCta && (
        <a href={`#${section.primaryCta.targetId}`} class="btn primary hero-btn">
          {section.primaryCta.label}
          <svg class="scroll-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <polyline points="19 12 12 19 5 12"></polyline>
          </svg>
        </a>
      )}

      {/* CTA secondaria: usa quella del JSON se presente, altrimenti link diretto al preventivatore.
          Chi arriva gi√† convinto non deve scrollare tutta la pagina. */}
      {section.secondaryCta ? (
        <a href={`#${section.secondaryCta.targetId}`} class="btn secondary hero-btn">
          {section.secondaryCta.label}
        </a>
      ) : (
        <a href="/preventivi-box#preventivi" class="btn secondary hero-btn">
          Calcola il tuo preventivo
        </a>
      )}
    </div>

  </div>
</section>

<style>
  .hero-section {
    min-height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    padding-top: 120px;
  }

  .headline {
    font-size: clamp(3rem, 8vw, 5.5rem);
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
    white-space: pre-line;
    color: var(--text);
  }

  .body-text {
    font-size: clamp(1.1rem, 2vw, 1.35rem);
    color: var(--muted);
    max-width: 65ch;
    margin: 0 auto 48px;
    line-height: 1.6;
  }

  .actions {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 18px 36px;
    font-size: 1.1rem;
    border-radius: 99px;
    font-weight: 600;
  }

  .btn.secondary {
    background: rgba(255,255,255,0.03);
    color: #fff;
    border: 1px solid rgba(255,255,255,0.1);
  }
  .btn.secondary:hover {
    background: rgba(255,255,255,0.08);
  }

  .scroll-arrow {
    transition: transform 0.3s ease;
  }
  .hero-btn:hover .scroll-arrow {
    transform: translateY(4px);
  }
</style>
