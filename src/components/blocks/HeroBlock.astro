---
import type { SiteConfig } from "../../lib/siteConfig";
const { cfg, section } = Astro.props as { cfg: SiteConfig; section: any };

// Pulizia stringhe: Garantisce url assoluti puri
const pathPrimary = section.primaryCta.targetId.replace('#', '').replace('/', '');
const pathSecondary = section.secondaryCta.targetId.replace('#', '').replace('/', '');
---

<section id={section.id} style="min-height: 100vh; display: flex; align-items: center; justify-content: center; position: relative; z-index: 10; padding: 0 24px;">
  
  <div class="wrap reveal" style="display: flex; flex-direction: column; align-items: center; text-align: center; max-width: 900px; padding-top: 80px;">
    
    <span class="kicker" style="margin-bottom: 32px;">{section.kicker}</span>
    
    <h1 style="white-space:pre-line; background: linear-gradient(180deg, #ffffff 20%, rgba(255,255,255,0.4) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; filter: drop-shadow(0px 10px 30px rgba(0,0,0,0.5));">
      {section.headline}
    </h1>
    
    <p style="margin-bottom: 56px; max-width: 55ch; font-size: 1.3rem; color: var(--muted); white-space:pre-line;">
      {section.body}
    </p>

    <div style="display:flex; gap:20px; flex-wrap:wrap; justify-content: center;">
      <a class="btn primary" href={`/${pathPrimary}`} style="padding: 20px 48px; font-size: 1.15rem;">
        {section.primaryCta.label}
      </a>
      <a class="btn" href={`/${pathSecondary}`} style="padding: 20px 48px; font-size: 1.15rem; background: rgba(255,255,255,0.03); backdrop-filter: blur(10px);">
        {section.secondaryCta.label}
      </a>
    </div>

  </div>

  <div class="reveal delay-2" style="position: absolute; bottom: 60px; left: 50%; transform: translateX(-50%); opacity: 0.4;">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="var(--text)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="animation: float 3s ease-in-out infinite;">
      <path d="M12 4v16M19 13l-7 7-7-7"/>
    </svg>
  </div>
  
  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0); opacity: 0.3; }
      50% { transform: translateY(15px); opacity: 0.8; }
    }
  </style>
</section>