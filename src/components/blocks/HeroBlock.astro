---
import type { SiteConfig } from "../../lib/siteConfig";
const { cfg, section } = Astro.props as { cfg: SiteConfig; section: any };

// Estraggo gli ID assicurandomi che non ci siano cancelletti o errori dal JSON
const pathPrimary = section.primaryCta.targetId.replace('#', '');
const pathSecondary = section.secondaryCta.targetId.replace('#', '');
---

<section id={section.id} style="min-height: 100vh; display: flex; align-items: center; justify-content: center; position: relative; z-index: 10; padding: 0 24px;">
  
  <div class="wrap reveal" style="display: flex; flex-direction: column; align-items: center; text-align: center; max-width: 900px; padding-top: 40px;">
    
    <span class="kicker" style="margin-bottom: 24px;">{section.kicker}</span>
    
    <h1 style="white-space:pre-line; background: linear-gradient(180deg, #ffffff 0%, rgba(255,255,255,0.6) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
      {section.headline}
    </h1>
    
    <p style="font-size: 1.35rem; margin-bottom: 48px; max-width: 45ch; line-height: 1.5; color: rgba(255,255,255,0.7);">
      Ci occupiamo di siti web, branding e contenuti digitali per chi vuole crescere online in modo serio.
    </p>

    <div style="display:flex; gap:20px; flex-wrap:wrap; justify-content: center;">
      <a class="btn primary" style="padding: 18px 40px; font-size: 1.1rem;" href={`/${pathPrimary}`}>
        {section.primaryCta.label}
      </a>
      <a class="btn" style="padding: 18px 40px; font-size: 1.1rem; backdrop-filter: blur(10px);" href={`/${pathSecondary}`}>
        {section.secondaryCta.label}
      </a>
    </div>

  </div>

  <div class="reveal delay-2" style="position: absolute; bottom: 40px; left: 50%; transform: translateX(-50%); opacity: 0.5;">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="animation: bounce 2s infinite;">
      <path d="M12 5v14M19 12l-7 7-7-7"/>
    </svg>
  </div>
  
  <style>
    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-10px); }
      60% { transform: translateY(-5px); }
    }
  </style>
</section>