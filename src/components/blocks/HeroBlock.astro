---
import type { SiteConfig } from "../../lib/siteConfig";
const { cfg, section } = Astro.props as { cfg: SiteConfig; section: any };
---

<section id={section.id} style="padding: 12vh 0 8vh;">
  <div class="wrap grid cols-2" style="align-items:center; gap: 60px;">
    
    <div class="reveal">
      <span class="kicker">{section.kicker}</span>
      <h1 style="white-space:pre-line;">{section.headline}</h1>
      <p style="max-width: 55ch; font-size: 1.25rem; margin-bottom: 40px; white-space:pre-line;">{section.body}</p>

      <div style="display:flex; gap:16px; flex-wrap:wrap;">
        <a class="btn primary" href={`/${section.primaryCta.targetId}`}>{section.primaryCta.label}</a>
        <a class="btn" href={`/${section.secondaryCta.targetId}`}>{section.secondaryCta.label}</a>
      </div>
    </div>

    <div class="card reveal delay-1" style="padding:32px; position: relative; overflow: hidden; display: flex; flex-direction: column; justify-content: center; min-height: 300px;">
      <div style="position: absolute; top: -80px; right: -80px; width: 220px; height: 220px; background: var(--accent); filter: blur(100px); opacity: 0.15; z-index: 0; border-radius: 50%;"></div>
      <div style="position: absolute; bottom: -40px; left: -40px; width: 150px; height: 150px; background: var(--accent2); filter: blur(80px); opacity: 0.1; z-index: 0; border-radius: 50%;"></div>
      
      <div style="position: relative; z-index: 1;">
        <span class="kicker" style="color: var(--muted); margin-bottom: 8px;">Anteprima Progetto</span>
        <div style="display:flex; align-items:center; justify-content:space-between; margin-top:16px;">
          <strong style="font-size: 1.4rem; font-weight: 600;">{cfg.brand.name}</strong>
          <img src={cfg.brand.logoPath} alt="Logo Webora" style="height:44px; width:auto;" />
        </div>
        <div class="divider"></div>
        <p style="margin: 0; font-size: 1.05rem; line-height: 1.5;">Progettiamo identit√† digitali. <br/><span style="color: #fff;">Dati guidati, design ossessivo.</span></p>
      </div>
    </div>
    
  </div>
</section>