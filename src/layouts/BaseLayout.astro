---
import type { SiteConfig } from "../lib/siteConfig";
import Header from "../components/Header.astro";
import DrawerMenu from "../components/DrawerMenu.astro";
import "../styles/global.css";
import FooterBlock from "../components/blocks/FooterBlock.astro";

const { cfg, title, description, ogImageOverride } = Astro.props as {
  cfg: SiteConfig;
  title?: string;
  description?: string;
  ogImageOverride?: string;
};

const t = cfg.theme;
const pageTitle = title || cfg.seo.title;
const pageDescription = description || cfg.seo.description;
const siteUrl = cfg.contacts?.website || "https://webora.it";
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImage = ogImageOverride || `${siteUrl}/og-cover.png`;

const schemaOrg = {
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": cfg.brand.name,
  "description": cfg.seo.description,
  "url": siteUrl,
  "logo": `${siteUrl}/logoWebora.png`,
  "telephone": `+${cfg.contacts?.phoneE164 || ""}`,
  "email": cfg.contacts?.email || "",
  "sameAs": [
    cfg.contacts?.instagram ? `https://instagram.com/${cfg.contacts.instagram}` : null,
    siteUrl
  ].filter(Boolean),
  "priceRange": "€€",
  "areaServed": "IT",
  "availableLanguage": "Italian",
  "serviceType": ["Web Design", "Web Development", "App Gestionale", "Digital Strategy"]
};
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <meta name="author" content={cfg.brand.name} />
    <meta name="keywords" content="siti web, app gestionali, web design, sviluppo web, agenzia digitale, Italia" />
    <link rel="canonical" href={canonicalUrl} />

    <meta name="theme-color" content={cfg.theme?.bg || "#0a0a0c"} />
    <meta name="msapplication-TileColor" content={cfg.theme?.bg || "#0a0a0c"} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={`${cfg.brand.name} — ${cfg.brand.tagline}`} />
    <meta property="og:site_name" content={cfg.brand.name} />
    <meta property="og:locale" content="it_IT" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={`${cfg.brand.name} — ${cfg.brand.tagline}`} />

    <link rel="icon" type="image/png" href="/logoWebora.png" />
    <link rel="apple-touch-icon" href="/logoWebora.png" />

    <script type="application/ld+json" set:html={JSON.stringify(schemaOrg)} />

    <style define:vars={{
      bg: "#101014",
      panel: "#16161b",
      text: t.text,
      muted: t.muted,
      accent: t.accent,
      accent2: t.accent2
    }}>
      :root {
        --bg: var(--bg);
        --panel: var(--panel);
        --text: var(--text);
        --muted: var(--muted);
        --accent: var(--accent);
        --accent2: var(--accent2);
        --radius: 24px;
        --max: 1140px;
      }
    </style>
  </head>

  <body>
    <div class="bg-watermark" style={`background-image: url('${cfg.brand.logoPath}')`}></div>
    <div class="mouse-glow" id="mouseGlow"></div>

    <Header cfg={cfg} />
    <DrawerMenu cfg={cfg} />

    <main style="position: relative; z-index: 10;">
      <slot />
    </main>

    <FooterBlock cfg={cfg} />

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const bg = document.querySelector('.bg-watermark') as HTMLElement;
        const glow = document.getElementById('mouseGlow') as HTMLElement;
        const isMobile = window.innerWidth <= 768;

        if (glow && isMobile) glow.style.display = 'none';

        window.addEventListener('mousemove', (e) => {
          if (glow && !isMobile) {
            glow.style.transform = `translate(${e.clientX}px, ${e.clientY}px) translate(-50%, -50%)`;
          }
          if (bg && !isMobile) {
            const x = (e.clientX / window.innerWidth - 0.5) * 25;
            const y = (e.clientY / window.innerHeight - 0.5) * 25;
            bg.style.transform = `translate(calc(-50% + ${x}px), calc(-50% + ${y}px))`;
          }
        });

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('in-view');
              observer.unobserve(entry.target);
            }
          });
        }, {
          threshold: 0.1,
          rootMargin: isMobile ? "0px 0px 150px 0px" : "0px 0px -50px 0px"
        });

        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>
