---
import type { SiteConfig } from "../lib/siteConfig";
import Header from "../components/Header.astro";
import DrawerMenu from "../components/DrawerMenu.astro";
import "../styles/global.css";

const { cfg, title } = Astro.props as { cfg: SiteConfig; title?: string };
const t = cfg.theme;
const pageTitle = title || cfg.seo.title;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={cfg.seo.description} />
    <title>{pageTitle}</title>

    <style define:vars={{
      bg: t.bg,
      panel: t.panel,
      text: t.text,
      muted: t.muted,
      accent: t.accent,
      accent2: t.accent2
    }}>
      :root {
        --bg: var(--bg);
        --panel: var(--panel);
        --text: var(--text);
        --muted: var(--muted);
        --accent: var(--accent);
        --accent2: var(--accent2);
        --line: rgba(255, 255, 255, 0.08);
        --shadow: 0 24px 60px rgba(0, 0, 0, 0.6);
        --radius: 20px;
        --max: 1120px;
      }
    </style>
  </head>

  <body>
    <Header cfg={cfg} />
    <DrawerMenu cfg={cfg} />
    <main>
      <slot />
    </main>
  </body>
</html>