---
import type { SiteConfig } from "../lib/siteConfig";
import Header from "../components/Header.astro";
import DrawerMenu from "../components/DrawerMenu.astro";
import "../styles/global.css";

const { cfg, title } = Astro.props as { cfg: SiteConfig; title?: string };
const t = cfg.theme;
const pageTitle = title || cfg.seo.title;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="description" content={cfg.seo.description} />
    <title>{pageTitle}</title>

    <style define:vars={{
      bg: "#101014",     /* Colore Premium Dark ripristinato */
      panel: "#16161b",  /* Pannelli leggermente piÃ¹ chiari */
      text: t.text,
      muted: t.muted,
      accent: t.accent,
      accent2: t.accent2
    }}>
      :root {
        --bg: var(--bg);
        --panel: var(--panel);
        --text: var(--text);
        --muted: var(--muted);
        --accent: var(--accent);
        --accent2: var(--accent2);
        --radius: 24px;
        --max: 1140px;
      }
    </style>
  </head>

  <body>
    <div class="bg-watermark" style={`background-image: url('${cfg.brand.logoPath}')`}></div>
    <div class="mouse-glow" id="mouseGlow"></div>

    <Header cfg={cfg} />
    <DrawerMenu cfg={cfg} />
    
    <main style="position: relative; z-index: 10;">
      <slot />
    </main>

    <script>
      document.addEventListener('DOMContentLoaded', () => {
        const bg = document.querySelector('.bg-watermark') as HTMLElement;
        const glow = document.getElementById('mouseGlow') as HTMLElement;
        
        window.addEventListener('mousemove', (e) => {
          // Glow fluido che segue il mouse
          if(glow) {
            glow.style.transform = `translate(${e.clientX}px, ${e.clientY}px) translate(-50%, -50%)`;
          }
          // Parallasse elegante del logo in background
          if(bg) {
            const x = (e.clientX / window.innerWidth - 0.5) * 25;
            const y = (e.clientY / window.innerHeight - 0.5) * 25;
            bg.style.transform = `translate(calc(-50% + ${x}px), calc(-50% + ${y}px))`;
          }
        });

        // Motore Intersection Observer per l'entrata degli elementi
        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('in-view');
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.15, rootMargin: "0px 0px -50px 0px" });

        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
      });
    </script>
  </body>
</html>