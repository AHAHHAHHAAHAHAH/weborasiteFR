---
import { loadSiteConfig } from "../lib/siteConfig";
import BaseLayout from "../layouts/BaseLayout.astro";

const cfg = await loadSiteConfig();
const faqData = (cfg.sections || []).find((s: any) => s.id === "faq");
---

<BaseLayout cfg={cfg} title={`${cfg.brand?.name || 'Studio'} — Assistenza & FAQ`}>
  <div style="padding-top: 100px; padding-bottom: 80px; display: flex; flex-direction: column; gap: 0;">
    
    {faqData && (
      <section class="section">
        <div class="wrap" style="max-width: 800px; margin: 0 auto;">
          
          <div class="reveal" style="text-align: center; margin-bottom: 60px;">
            <span class="kicker">{faqData.kicker}</span>
            <h1 style="font-size: clamp(2rem, 5vw, 3rem); line-height: 1.1; margin-bottom: 20px; letter-spacing: -0.02em; color: var(--text);">
              {faqData.title}
            </h1>
            <p style="font-size: 1.1rem; color: var(--muted); line-height: 1.6; max-width: 60ch; margin: 0 auto;">
              {faqData.body}
            </p>
          </div>

          <div class="faq-accordion reveal delay-1">
            {faqData.items.map((item: any) => (
              <details class="faq-item" name="faq-group">
                <summary class="faq-question">
                  {item.q}
                  <div class="faq-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19" class="vertical"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                  </div>
                </summary>
                <div class="faq-answer">
                  <p>{item.a}</p>
                </div>
              </details>
            ))}
          </div>

        </div>
      </section>
    )}
    
    <div class="tunnel-gateway reveal delay-2" style="margin-top: 40px;">
      <p class="gateway-subtitle">Tutto chiaro? Passiamo ai fatti.</p>
      <a href="/preventivi-box" class="gateway-link">
        <span class="gateway-title">Area Preventivi & Contatti</span>
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="gateway-arrow">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

  </div>

  <a href={`https://wa.me/${cfg.contacts.phoneE164}?text=Ciao%20Webora,%20vorrei%20conoscervi%20meglio!`} target="_blank" class="cyber-whatsapp-btn" aria-label="Contattaci su WhatsApp">
    <div class="cyber-glow"></div>
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
    </svg>
    <span class="cyber-text">Sempre con te</span>
  </a>

</BaseLayout>

<style>
  /* Stili dell'Accordion FAQ */
  .faq-accordion { display: flex; flex-direction: column; gap: 16px; }
  .faq-item { background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05); border-radius: 16px; overflow: hidden; transition: background 0.3s ease, border-color 0.3s ease; }
  .faq-item:hover { background: rgba(255,255,255,0.04); border-color: rgba(255,255,255,0.1); }
  .faq-item summary::-webkit-details-marker { display: none; }
  .faq-item summary { list-style: none; }
  .faq-question { padding: 24px 30px; font-size: 1.1rem; font-weight: 600; color: var(--text); cursor: pointer; display: flex; justify-content: space-between; align-items: center; gap: 20px; user-select: none; }
  .faq-icon { flex-shrink: 0; color: var(--accent); transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1); }
  .faq-item[open] .faq-icon { transform: rotate(45deg); color: var(--accent2); }
  .faq-answer { padding: 0 30px 24px 30px; font-size: 1rem; color: var(--muted); line-height: 1.7; animation: slideDown 0.3s ease-out forwards; }

  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Stili Gateway Finale */
  .tunnel-gateway { padding: 40px 24px 80px; text-align: center; position: relative; z-index: 10; display: flex; flex-direction: column; align-items: center; }
  .gateway-subtitle { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.2em; color: var(--muted); margin-bottom: 16px; font-weight: 600; }
  .gateway-link { display: flex; flex-direction: column; align-items: center; gap: 16px; color: var(--text); transition: all 0.3s ease; }
  .gateway-link:hover { color: var(--accent2); transform: translateY(4px); }
  .gateway-title { font-size: clamp(2rem, 4vw, 2.5rem); font-weight: 800; letter-spacing: -0.02em; }
  .gateway-arrow { color: var(--accent); animation: bounceDown 2s infinite cubic-bezier(0.2, 0.8, 0.2, 1); }
  
  @keyframes bounceDown { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(10px); } }
  
  /* ==========================================================================
     IL BOTTONE NEON LED ROSSO "BUILD YOUR FUTURE"
     ========================================================================== */
  .cyber-whatsapp-btn {
    position: fixed;
    bottom: 40px;
    right: 40px;
    z-index: 999999; /* Impossibile che venga coperto */
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 28px;
    background: #0a0a0a; /* Sfondo scuro per far risaltare il led */
    border: 1px solid #ff003c; /* Bordo rosso laser */
    border-radius: 50px;
    color: #ff003c; /* Testo rosso neon */
    text-decoration: none;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-size: 0.95rem;
    backdrop-filter: blur(10px);
    
    /* DOPPIA ANIMAZIONE: Fluttuazione + Pulsazione LED */
    animation: cyber-levitate 4s ease-in-out infinite;
    transition: all 0.3s ease;
  }

  /* Il bagliore vero e proprio dietro al bottone (I LED) */
  .cyber-glow {
    position: absolute;
    inset: 0;
    border-radius: 50px;
    background: transparent;
    box-shadow: 0 0 20px rgba(255, 0, 60, 0.6), inset 0 0 10px rgba(255, 0, 60, 0.2);
    z-index: -1;
    animation: cyber-pulse 2s infinite alternate;
  }

  .cyber-whatsapp-btn svg {
    filter: drop-shadow(0 0 5px rgba(255, 0, 60, 0.8));
    transition: all 0.3s ease;
  }

  /* Animazione di levitazione (su e giù morbido) */
  @keyframes cyber-levitate {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-12px); }
  }

  /* Animazione dei LED rossi che pulsano come un respiro */
  @keyframes cyber-pulse {
    0% {
      box-shadow: 0 0 15px rgba(255, 0, 60, 0.4), inset 0 0 5px rgba(255, 0, 60, 0.2);
    }
    100% {
      box-shadow: 0 0 35px rgba(255, 0, 60, 0.9), 0 0 60px rgba(255, 0, 60, 0.4), inset 0 0 15px rgba(255, 0, 60, 0.5);
    }
  }

  /* Effetto all'Hover (Quando ci passi il mouse) */
  .cyber-whatsapp-btn:hover {
    background: #ff003c;
    color: #ffffff;
    box-shadow: 0 0 40px rgba(255, 0, 60, 1);
    transform: scale(1.05);
  }

  .cyber-whatsapp-btn:hover svg {
    filter: drop-shadow(0 0 5px #ffffff);
  }
  
  .cyber-whatsapp-btn:hover .cyber-glow {
    display: none; /* Disattiva il bagliore finto, ora è tutto solido */
  }

  /* Responsività per Smartphone (Diventa un pallino per non occupare tutto lo schermo) */
  @media (max-width: 768px) {
    .cyber-whatsapp-btn {
      bottom: 24px;
      right: 24px;
      padding: 16px;
      border-radius: 50%;
    }
    .cyber-text {
      display: none; /* Nasconde il testo, lascia solo l'icona LED */
    }
  }
</style>