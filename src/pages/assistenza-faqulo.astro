---
import { loadSiteConfig } from "../lib/siteConfig";
import BaseLayout from "../layouts/BaseLayout.astro";

const cfg = await loadSiteConfig();
const faqData = (cfg.sections || []).find((s: any) => s.id === "faq");
---

<BaseLayout cfg={cfg} title={`${cfg.brand?.name || 'Studio'} — Assistenza & FAQ`}>
  <div style="padding-top: 100px; padding-bottom: 80px; display: flex; flex-direction: column; gap: 0;">

    {faqData && (
      <section class="section">
        <div class="wrap" style="max-width: 800px; margin: 0 auto;">

          <div class="reveal" style="text-align: center; margin-bottom: 60px;">
            <span class="kicker">{faqData.kicker}</span>
            <h1 style="font-size: clamp(2rem, 5vw, 3rem); line-height: 1.1; margin-bottom: 20px; letter-spacing: -0.02em; color: var(--text);">
              {faqData.title}
            </h1>
            <p style="font-size: 1.1rem; color: var(--muted); line-height: 1.6; max-width: 60ch; margin: 0 auto;">
              {faqData.body}
            </p>
          </div>

          <div class="faq-accordion reveal delay-1">
            {faqData.items.map((item: any) => (
              <details class="faq-item" name="faq-group">
                <summary class="faq-question">
                  {item.q}
                  <div class="faq-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                  </div>
                </summary>
                <div class="faq-answer">
                  <p>{item.a}</p>
                </div>
              </details>
            ))}
          </div>

        </div>
      </section>
    )}

    <div class="tunnel-gateway reveal delay-2" style="margin-top: 40px;">
      <p class="gateway-subtitle">Tutto chiaro? Passiamo ai fatti.</p>
      <a href="/preventivi-box" class="gateway-link">
        <span class="gateway-title">Area Preventivi & Contatti</span>
        <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="gateway-arrow">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
    </div>

  </div>

  <!-- Bottone WhatsApp flottante — solo su questa pagina -->
  <a
    href={`https://wa.me/${cfg.contacts.phoneE164}?text=Ciao%20Webora!%20Ho%20una%20domanda.`}
    target="_blank"
    rel="noopener noreferrer"
    class="wa-fab"
    aria-label="Contattaci su WhatsApp"
  >
    <div class="wa-glow"></div>
    <svg width="22" height="22" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
    </svg>
    <span class="wa-label">Scrivici</span>
  </a>

</BaseLayout>

<style>
  /* FAQ Accordion */
  .faq-accordion { display: flex; flex-direction: column; gap: 16px; }
  .faq-item { background: rgba(255,255,255,0.02); border: 1px solid rgba(255,255,255,0.05); border-radius: 16px; overflow: hidden; transition: background 0.3s ease, border-color 0.3s ease; }
  .faq-item:hover { background: rgba(255,255,255,0.04); border-color: rgba(255,255,255,0.1); }
  .faq-item summary::-webkit-details-marker { display: none; }
  .faq-item summary { list-style: none; }
  .faq-question { padding: 24px 30px; font-size: 1.1rem; font-weight: 600; color: var(--text); cursor: pointer; display: flex; justify-content: space-between; align-items: center; gap: 20px; user-select: none; }
  .faq-icon { flex-shrink: 0; color: var(--accent); transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1); }
  .faq-item[open] .faq-icon { transform: rotate(45deg); color: var(--accent2); }
  .faq-answer { padding: 0 30px 24px 30px; font-size: 1rem; color: var(--muted); line-height: 1.7; animation: slideDown 0.3s ease-out forwards; }
  @keyframes slideDown {
    from { opacity: 0; transform: translateY(-10px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Gateway */
  .tunnel-gateway { padding: 40px 24px 80px; text-align: center; position: relative; z-index: 10; display: flex; flex-direction: column; align-items: center; }
  .gateway-subtitle { font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.2em; color: var(--muted); margin-bottom: 16px; font-weight: 600; }
  .gateway-link { display: flex; flex-direction: column; align-items: center; gap: 16px; color: var(--text); transition: all 0.3s ease; }
  .gateway-link:hover { color: var(--accent2); transform: translateY(4px); }
  .gateway-title { font-size: clamp(2rem, 4vw, 2.5rem); font-weight: 800; letter-spacing: -0.02em; }
  .gateway-arrow { color: var(--accent); animation: bounceDown 2s infinite cubic-bezier(0.2, 0.8, 0.2, 1); }
  @keyframes bounceDown { 0%, 100% { transform: translateY(0); } 50% { transform: translateY(10px); } }

  /* Bottone WhatsApp flottante */
  .wa-fab {
    position: fixed;
    bottom: 32px;
    right: 32px;
    z-index: 9000;
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 13px 22px;
    background: rgba(10, 10, 10, 0.9);
    border: 1px solid rgba(37, 211, 102, 0.35);
    border-radius: 50px;
    color: #25D366;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.88rem;
    letter-spacing: 0.04em;
    transition: all 0.35s cubic-bezier(0.16, 1, 0.3, 1);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
  }
  .wa-glow {
    position: absolute;
    inset: 0;
    border-radius: 50px;
    pointer-events: none;
    z-index: -1;
    animation: waBreath 3s ease-in-out infinite alternate;
  }
  @keyframes waBreath {
    from { box-shadow: 0 0 8px rgba(37, 211, 102, 0.1); }
    to   { box-shadow: 0 0 24px rgba(37, 211, 102, 0.35), 0 0 50px rgba(37, 211, 102, 0.1); }
  }
  .wa-fab:hover {
    background: #25D366;
    color: #000;
    border-color: #25D366;
    transform: translateY(-3px);
    box-shadow: 0 10px 28px rgba(37, 211, 102, 0.3);
  }
  .wa-fab:hover .wa-glow { display: none; }
  @media (max-width: 768px) {
    .wa-fab { bottom: 20px; right: 20px; padding: 13px; border-radius: 50%; }
    .wa-label { display: none; }
  }
</style>
